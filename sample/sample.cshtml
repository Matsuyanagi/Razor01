@for( int j = 0; j < 10; j++ ){
	
	if ( j == 0 ){
		<text>zero</text>
	}else if ( ( j & 1 ) == 0 ){
		<text>even : j = @j</text>
	}else{
		<text>odd  : j = @j</text>
	}
}
